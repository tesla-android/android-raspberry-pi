Subject: [PATCH 2/2] Add WebSockets ping thread

Change-Id: I83473c93c703e521b3d72b51c1a3e068d3861d5d
---
 services/audioflinger/AudioFlinger.cpp | 14 +++++++++++---
 1 file changed, 11 insertions(+), 3 deletions(-)

diff --git a/services/audioflinger/AudioFlinger.cpp b/services/audioflinger/AudioFlinger.cpp
index c9b47fd..51a9485 100644
--- a/services/audioflinger/AudioFlinger.cpp
+++ b/services/audioflinger/AudioFlinger.cpp
@@ -339,9 +339,17 @@ void AudioFlinger::instantiate() {
                    IServiceManager::DUMP_FLAG_PRIORITY_DEFAULT);
     struct ws_events evs;
     evs.onopen    = &onopen;
-	evs.onclose   = &onclose;
-	evs.onmessage = &onmessage;
-	ws_socket(&evs, 8080, 1, 1000);
+    evs.onclose   = &onclose;
+    evs.onmessage = &onmessage;
+    ws_socket(&evs, 8080, 1, 1000);
+
+    std::thread([] {
+        while (true) {
+            sleep(1);
+    	    ws_ping(NULL, 10);
+        }
+    }).detach();
+
 }
 
 AudioFlinger::AudioFlinger()
